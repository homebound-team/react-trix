{
	"compilerOptions": {
		"outDir": "./lib",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"downlevelIteration": true,
		"declaration": true,
		"sourceMap": true,
		"jsx": "react"
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}